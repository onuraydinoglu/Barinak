@model Barinak.Models.Tur

@{
    ViewData["Title"] = "Index";
}
<div class="clearfix">
    <h4 class="float-start">Tur Kaydet</h4>
    <a type="button" class="btn btn-success float-end" asp-action="TurList">Tur Listele</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Kaydet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TurCins" class="control-label"></label>
                <input asp-for="TurCins" class="form-control" />
                <span asp-validation-for="TurCins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TurAd" class="control-label"></label>
                <input asp-for="TurAd" class="form-control" />
                <span asp-validation-for="TurAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TurYas" class="control-label"></label>
                <input asp-for="TurYas" class="form-control" />
                <span asp-validation-for="TurYas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategoriID" class="control-label"></label>
                <select asp-for="KategoriID" class="form-control" asp-items="ViewBag.KategoriID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Tur Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
